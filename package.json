  "bugs": {
    "url": "https://github.com/nguyentr2903/loginpage/issues"
  },
  "homepage": "https://github.com/nguyentr2903/loginpage#readme",
  "devDependencies": {
    "concurrently": "^9.1.2"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "express": "^4.21.2",
    "mongodb": "^6.12.0"
  }
}
